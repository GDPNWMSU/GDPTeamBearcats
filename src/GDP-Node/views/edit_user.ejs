<body>
    <div class="container">

        <!-- starte -->
        <div class="mt-5" style="margin-top: 20px; border: 2px solid black">
            <table class="table table-striped">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Username</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < data.length;i++ ) { %>
                    <tr>
                        <td>
                            <%= data[i].username %>
                        </td>
                        <td>
                            <%= data[i].firstName %>
                        </td>
                        <td>
                            <%= data[i].lastName %>
                        </td>
                        <td>
                            <%= data[i]['role'] %>
                        </td>

                        <td> <a href="/edit_users/<%= data[i].pk %>" class="btn btn-primary">Edit</a></td>
                        <td><form action ="/delete_user" method ="POST">
                       
                            <!-- <td> <a  class="btn btn-danger" onclick="deleteuser('<%= data[i].pk %>')" >Delete</a></td> -->
                       
                        <input type="text" name="delete" value="<%= data[i].pk %>" hidden >
                       <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <!-- ended -->
        </div>
